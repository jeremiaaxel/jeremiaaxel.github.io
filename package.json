    "bits-ui": "^2.11.4",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "lucide-svelte": "^0.545.0",
    "mode-watcher": "^1.1.0",
    "posthog-js": "^1.272.0",
    "svelte-sonner": "^1.0.5",
    "tailwind-merge": "^3.3.1",
    "tailwind-variants": "^3.2.2"
  }
}